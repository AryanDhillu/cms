datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum PublishStatus {
  draft
  scheduled
  published
  archived
}

enum LessonContentType {
  video
  article
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

model Program {
  id          String        @id @default(uuid())
  title       String
  status      PublishStatus @default(draft)
  publishAt   DateTime?
  publishedAt DateTime?
  createdAt   DateTime      @default(now())
  description      String?
  
  // Language support
  languagePrimary    String    @default("en")
  languagesAvailable String[] 

  // Media
  thumbnailUrl String?
  bannerUrl    String?
  portraitUrl  String?

  terms       Term[]
}

model Term {
  id         String   @id @default(uuid())
  programId String
  termNumber Int
  title      String?
  createdAt  DateTime @default(now())

  program    Program @relation(fields: [programId], references: [id], onDelete: Restrict)
  lessons    Lesson[]

  @@unique([programId, termNumber])
}

model Lesson {
  id        String            @id @default(uuid())
  termId    String
  lessonNumber Int
  title     String
  status    PublishStatus     @default(draft)
  publishAt DateTime?
  publishedAt DateTime?

  contentType LessonContentType
  durationMs Int?

  createdAt DateTime @default(now())

  // Language support
  contentLanguagePrimary    String   @default("en")
  contentLanguagesAvailable String[] 
  contentUrlsByLanguage     Json?

  // Media
  videoUrl      String?
  thumbnailUrl  String?

  term       Term @relation(fields: [termId], references: [id], onDelete: Cascade)

  @@unique([termId, lessonNumber])
}

model User {
  id        String   @id
  email     String   @unique
  role      Role     @default(VIEWER)
  createdAt DateTime @default(now())
}

model UserRole {
  id         String   @id @default(uuid())
  userId     String   @unique
  role       Role
  createdAt DateTime @default(now())
}
